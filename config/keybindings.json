{
  "$schema": "https://claude.dev/keybindings.schema.json",
  "keybindings": [
    {
      "key": "ctrl+l",
      "command": "insertText",
      "args": { "text": "/loop " },
      "when": "inputEmpty",
      "description": "Quick loop start"
    },
    {
      "key": "ctrl+r",
      "command": "insertText",
      "args": { "text": "/recall " },
      "when": "inputEmpty",
      "description": "Quick recall from memory"
    },
    {
      "key": "ctrl+e",
      "command": "insertText",
      "args": { "text": "/evolve" },
      "when": "inputEmpty",
      "description": "Run evolve cycle"
    },
    {
      "key": "ctrl+m",
      "command": "insertText",
      "args": { "text": "/remember " },
      "when": "inputEmpty",
      "description": "Quick remember"
    }
  ]
}
